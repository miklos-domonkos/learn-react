{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": [1, "single", { "avoidEscape": true }],
    "jsx-quotes": [1, "prefer-single"],
    "space-before-function-paren": 0
  },
  "ignorePatterns": "*.test.js"
}
